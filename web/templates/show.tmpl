{{define "show"}}
{{template "layout" .}}
{{end}}

{{define "content"}}
<h2>{{.Item.Title}}</h2>

{{if .Item.Image}}
    <img src="/static/uploads/{{.Item.Image}}" alt="{{.Item.Title}}" style="max-width:300px; display:block; margin-bottom:12px;">
{{end}}

<p><strong>Status:</strong> {{.Item.Status}}</p>
<p><strong>Description:</strong> {{.Item.Desc}}</p>
<p><strong>Contact:</strong> {{.Item.Contact}}</p>
<p class="muted">Reported on {{.Item.CreatedAt.Format "Jan 2, 2006 at 3:04 PM"}}</p>
{{if eq .Item.Status "found"}}
<p class="muted">Marked as found on {{.Item.FoundAt.Format "Jan 2, 2006 at 3:04 PM"}}</p>
{{end}}

{{if .CurrentUser}}
    {{if eq .Item.UserID .CurrentUser.ID}}
        <a href="/items/{{.Item.ID}}/edit">Edit Item</a>
    {{end}}
{{end}}
{{end}}
