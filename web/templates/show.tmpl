{{define "title"}}Item Details{{end}}

{{define "content"}}
<div class="card">
    <div class="row">
        <h2>{{.Item.Title}}</h2>
        <span class="pill {{if eq .Item.Status "lost"}}pill-lost{{else}}pill-found{{end}}">{{.Item.Status}}</span>
    </div>
    <p class="muted">Reported on {{.Item.CreatedAt.Format "Jan 2, 2006 at 3:04 PM"}}</p>
    <p><strong>Description:</strong><br>{{.Item.Desc}}</p>
    <p><strong>Contact Info:</strong><br>{{.Item.Contact}}</p>
</div>

<p><a href="/">← Back to All Items</a></p>
{{end}}

