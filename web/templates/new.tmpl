            <label for="desc"><strong>Description</strong></label><br>
            <textarea id="desc" name="desc" rows="4" style="width: 100%;"></textarea>
        </div>

        <div style="margin-bottom: 1em;">
            <label for="contact"><strong>Contact Info</strong></label><br>
            <input type="text" id="contact" name="contact" required style="width: 100%;">
