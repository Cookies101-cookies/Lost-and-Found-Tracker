{{define "new"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post New Item</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
<header>
    <h1><a href="/">Lost & Found</a></h1>
    <nav>
        <a href="/" class="btn btn-primary btn-sm">All Items</a>
        <a href="/items/new" class="btn btn-primary btn-sm">Post Item</a>
    </nav>
</header>

<main>
    <h2>Report Lost or Found Item</h2>

    <div class="card">
        <form method="POST" action="/items" enctype="multipart/form-data">
            <label for="title"><strong>Title</strong></label>
            <input type="text" id="title" name="title" required>

            <label for="desc"><strong>Description</strong></label>
            <textarea id="desc" name="desc" rows="4"></textarea>

            <label for="contact"><strong>Contact Info</strong></label>
            <input type="text" id="contact" name="contact" required>

            <label for="status"><strong>Status</strong></label>
            <select id="status" name="status" required>
                <option value="lost">Lost</option>
                <option value="found">Found</option>
            </select>

            <label for="image"><strong>Image (optional)</strong></label>
            <input type="file" id="image" name="image" accept="image/*">

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>

<footer>
    <p>&copy; 2025 Lost & Found</p>
</footer>
</body>
</html>
{{end}}
