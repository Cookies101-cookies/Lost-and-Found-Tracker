{{define "edit"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Item</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
<header>
    <h1><a href="/">Lost & Found</a></h1>
    <nav>
        <a href="/">All Items</a> | 
        <a href="/items/new">Post Item</a>
    </nav>
</header>

<main>
    <h2>Edit Item</h2>

    <div class="card">
        <form method="POST" action="/items/{{.Item.ID}}/edit" enctype="multipart/form-data">
            <label for="title"><strong>Title</strong></label>
            <input type="text" id="title" name="title" value="{{.Item.Title}}" required>

            <label for="desc"><strong>Description</strong></label>
            <textarea id="desc" name="desc" rows="4">{{.Item.Desc}}</textarea>

            <label for="contact"><strong>Contact Info</strong></label>
            <input type="text" id="contact" name="contact" value="{{.Item.Contact}}" required>

            <label for="status"><strong>Status</strong></label>
            <select id="status" name="status" required>
                <option value="lost" {{if eq .Item.Status "lost"}}selected{{end}}>Lost</option>
                <option value="found" {{if eq .Item.Status "found"}}selected{{end}}>Found</option>
            </select>

            <label><strong>Current Image</strong></label>
            {{if .Item.Image}}
                <img src="/static/uploads/{{.Item.Image}}" alt="{{.Item.Title}}">
            {{else}}
                <p>No image uploaded.</p>
            {{end}}

            <label for="image"><strong>Replace Image (optional)</strong></label>
            <input type="file" id="image" name="image" accept="image/*">

            <button type="submit" class="submit">Update Item</button>
        </form>
    </div>
</main>

<footer>
    <p>&copy; 2025 Lost & Found</p>
</footer>
</body>
</html>
{{end}}
